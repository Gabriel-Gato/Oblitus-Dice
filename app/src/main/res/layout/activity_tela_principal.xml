    <ImageButton
        android:id="@+id/d100_button"
        android:layout_width="95dp"
        android:layout_height="91dp"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="@+id/d100_image_view"
        app:layout_constraintEnd_toEndOf="@+id/d100_image_view"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/d100_image_view"
        app:layout_constraintTop_toTopOf="@+id/d100_image_view"
        app:layout_constraintVertical_bias="1.0" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/resposta"
            android:layout_width="match_parent"
            android:layout_height="10000dp"
            android:src="@drawable/oblitus2"
            android:scaleType="fitCenter"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/respostaTotal"
            android:layout_width="268dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="250dp"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            android:gravity="center" />

        <TextView
            android:id="@+id/dadoTotal"
            android:layout_width="268dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/respostaTotal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:textColor="@color/grey"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/dadoModificador"
            android:layout_width="268dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/dadoTotal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </RelativeLayout>



    <EditText
        android:id="@+id/Modificador"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="Digite o modificador "
        android:layout_marginStart="100dp"
        android:layout_marginTop="550dp"
        android:textColor="@color/grey"
        android:textStyle="bold"
        android:inputType="numberSigned"
        android:digits="0123456789-"
        android:max="3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textoModificador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modificador:"
        android:textSize="17sp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="563dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/numeroDeDados"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="Digite o numero de dados"
        android:layout_marginStart="100dp"
        android:layout_marginTop="50dp"
        android:textColor="@color/grey"
        android:textStyle="bold"
        android:inputType="number"
        android:digits="0123456789"
        android:max="2"
        app:layout_constraintTop_toBottomOf="@id/Modificador"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textoDado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dados:"
        android:textSize="17sp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="662dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


